//Write a C program to find the factorial of a given number using a for loop.
#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int factorial = 1;
    for(int i=n; i>0; i--){
        factorial *= i;
    }
    printf("Factorial of the given number is %d.",factorial);
    return 0;
}
